<div class="btn-group btn-group-vertical pull-right buttons_container">
	<% if signed_in? %>
		<% if current_user == card.user || current_user.admin? %>
			<%= link_to(edit_card_path(card), class:'btn btn-xs btn-info', title:'Изменить') do %>
				<i class='glyphicon glyphicon-edit'></i>
			<% end %>
		<% end %>
		<% if current_user.admin? %>
			<%= link_to(card_path(card), method:'delete', class:'btn btn-xs btn-danger', title:'Удалить', data:{confirm:"Удалить карточку\n«#{card.title}»?"} ) do %>
				<i class='glyphicon glyphicon-remove'></i>
			<% end %>
		<% end %>
	<% end %>
</div>
