<div class="btn-group btn-group-vertical pull-right buttons_container">
	<% if signed_in? %>
		<% if current_user == card.user || current_user.admin? %>
			<%= link_to 'Изменить', edit_card_path(card), class:'btn btn-into btn-mini', title:'Изменить' %>
		<% end %>
		<% if current_user.admin? %>
			<%= link_to 'Удалить', card_path(card), method:'delete', class:'btn btn-danger btn-mini', title:'Удалить' %>
		<% end %>
	<% end %>
</div>