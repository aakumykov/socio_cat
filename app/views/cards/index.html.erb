<% provide(:title,'Карточки') %>

<h1 class='page_title'><%= yield(:title) %></h1>

<%= render 'comfort_buttons', mode:'create' %>

<div class='col-md-8 col-md-offset-2'>
	<ul class='cards_index'>
		<% @list.each do |card| %>
			<% user = card.user %>
			<li>
				<%= link_to card.title, card_path(card.id), title: "карточка «#{card.title}»" %>,
				<span class='badge'><%= card.kind %></span>
				от
				<%= link_to user.name, user_path(user), title: "пользователь «#{user.name}»", class:'badge' %>
			</li>
		<% end %>
	</ul>
</div>