<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag	"bootstrap2/css/bootstrap.css", media: 'all' %>
  <%= javascript_include_tag "bootstrap2/js/bootstrap.js" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div class="row main_menu">
			<%= link_to 'Главная страница', home_path, class: 'btn btn-primary' %>
			<%= link_to 'Карточки', cards_path, class: 'btn btn-warning' %>
			<%= link_to 'Пользователи', users_path, class: 'btn btn-danger' %>
			<%= link_to 'О проекте', about_path, class: 'btn btn-info' %>
			<%= link_to 'Помощь', help_path, class: 'btn' %>
			
			<%= link_to 'Вход', login_path, class: 'btn pull-right btn-success' %>
			<%= link_to 'Регистрация', new_user_path, class: 'btn pull-right' %>
		</div>

		<%= render 'shared/flash.html.erb' %>
		
		<div class="row main_content">
			<%= yield %>
		</div>
		
		<div class='row span10 offset1'>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</div>
</body>
</html>
