<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag	"bootstrap2/css/bootstrap.css", media: 'all' %>
  <%= javascript_include_tag "bootstrap2/js/bootstrap.js" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<div class="row">
			<ul class="nav nav-tabs">
				<li><%= link_to 'Главная страница', home_path %></li>
				<li><%= link_to 'Карточки', cards_path %></li>
				<li><%= link_to 'О проекте', about_path %></li>
				<li><%= link_to 'Помощь', help_path %></li>
			</ul>
		</div>
		<div class="row main_content">
			<%= yield %>
		</div>
		<div class='row span10 offset1'>
			<%= debug(params) if Rails.env.development? %>
		</div>
	</div>
</body>
</html>
