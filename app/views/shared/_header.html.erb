<%= link_to 'Главная страница', home_path, class: 'btn btn-primary' %>
<%= link_to 'Карточки', cards_path, class: 'btn btn-danger' %>
<%= link_to 'Категории', categories_path, class: 'btn btn-success' %>
<% if signed_in? %>
	<%= link_to 'Пользователи', users_path, class: 'btn btn-warning' %>
<% end %>

<%= link_to 'О проекте', about_path, class: 'btn btn-info' %>
<%= link_to 'Помощь', help_path, class: 'btn' %>

<% if signed_in? %>
	<%= link_to 'Выход', logout_path, method: :delete, class: 'btn pull-right btn-success' %>
	<%= link_to "Профиль [#{current_user.name}]", current_user, class: 'btn btn-info pull-right' %>
<% else %>
	<%= link_to 'Вход', login_path, class: 'btn pull-right btn-success' %>
	<%= link_to 'Регистрация', new_user_path, class: 'btn pull-right' %>
<% end %>

<div class='row'>
	<%= @debug_info && debug(@debug_info) %>
</div>