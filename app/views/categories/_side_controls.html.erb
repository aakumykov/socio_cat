<% if signed_in? %>
	<% if current_user.admin? %>
		<div class='btn-group pull-right'>
			<%= link_to edit_category_path(obj.id), title:'Изменить', class:'btn btn-xs btn-info' do %>
				И
			<% end %>

			<%= link_to category_path(obj.id), title:'Удалить', method:'delete', class:'btn btn-xs btn-danger', data: { confirm: "Удалить категорию «#{obj.name}»?" } do %>
				У
			<% end %>
		</div>
	<% end %>
<% end %>