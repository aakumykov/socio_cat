<% provide(:title,'Категории') %>

<h1 class='page_title'><%= yield(:title) %></h1>


<div class='col-md-8 col-md-offset-2'>
	<%= render 'comfort_buttons' %>
	
	<% @list.each do |ctg| %>
		<div class='list_item category<%= ctg.id %>'>
			<%= link_to ctg.name, category_path(ctg.id), class:'cat_link' %>
			<%= render 'side_controls', obj:ctg %>
		</div>
	<% end %>

</div>