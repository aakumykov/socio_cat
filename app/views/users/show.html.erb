<% provide(:title,"Страница пользователя «#{@user.name}»") %>

<h1 class='page_title'><%= yield(:title) %></h1>

	<div class='span6 offset3'>
		<table class='table user_profile'>
			<tr>
				<td>Имя:</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>Электронная почта:</td>
				<td><%= @user.email %></td>
			</tr>
			<tfoot>
				<tr>
					<td colspan=2 class='profile_edit_button'>
						<% if @user == current_user %>
							<%= link_to 'Редактировать', edit_user_path(@user), class:'btn' %>
						<% end %>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>