<% provide(:title,"Страница пользователя «#{@user.name}»") %>

<h2 class='page_title'><%= yield(:title) %></h2>

	<div class='col-md-6 col-md-offset-3'>
		<table class='table user_profile'>
			<tr>
				<td>Имя:</td>
				<td><%= @user.name %></td>
			</tr>
			<tr>
				<td>Электронная почта:</td>
				<td><%= @user.email %></td>
			</tr>
			<tfoot>
				<tr>
					<td colspan=2 class='profile_edit_button'>
						<div class='row'>
							<% if current_user==@user or current_user.admin? %>
								<%= link_to 'Изменить', edit_user_path(@user), class:'btn btn-default pull-left' %>
								
								<% if current_user.admin? and current_user != @user %>
									<%= link_to 'Удалить', @user,
											method: :delete,
											data: { confirm: "Удалить пользователя «#{@user.name}»?" },
											class:'btn btn-danger pull-right'
									%>
								<% end %>
							
							<% end %>
						</div>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>